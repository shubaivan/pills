<!-- BEGIN PROFILE SIDEBAR -->
<div class="profile-sidebar">
    <!-- PORTLET MAIN -->
    <div class="portlet light profile-sidebar-portlet">
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic">
            <img src="{{ developer.avatar }}" class="img-responsive" alt="">
        </div>
        <!-- END SIDEBAR USERPIC -->
        <!-- SIDEBAR USER TITLE -->
        <div class="profile-usertitle">
            <div class="profile-usertitle-name">
               {{ developer.firstname }} {{ developer.lastname }}
            </div>
            <div class="profile-usertitle-job">
                User
            </div>
        </div>
        <!-- END SIDEBAR USER TITLE -->

        <!-- PHOTO UPLOAD START -->
        <div class="photoLoader">
            <form id="avatarForm" action={{ path("profile_photo_upload", {'slug': developer.slug}) }} method="post" enctype="multipart/form-data">
                <label>
                    <input id="Avatar" type="file" name="file"/>
                    <input type="submit" name="submitBtn" class="sbtn" value="Upload" />
                </label>
            </form>
        </div>
        <!-- PHOTO UPLOAD END -->

        <!-- STAT -->
        <div class="row list-separated profile-stat">
            <div class="col-md-4 col-sm-4 col-xs-6">
                <div class="uppercase profile-stat-title">
                    {{ developer.rate }}
                </div>
                <div class="uppercase profile-stat-text">
                    Rate
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6">
                <div class="uppercase profile-stat-title">
                    51
                </div>
                <div class="uppercase profile-stat-text">
                    Rating
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-6">
                <div class="uppercase profile-stat-title">
                    61
                </div>
                <div class="uppercase profile-stat-text">
                    XP
                </div>
            </div>
        </div>
        <!-- END STAT -->
        <!-- SIDEBAR MENU -->
        <div class="profile-usermenu">
            <ul class="nav">
                <li class="active">
                    <a href="#extra_profile_account.html">
                        <i class="icon-settings"></i>
                        Account Settings </a>
                </li>
                <li>
                    <a href="#extra_profile.html">
