{% extends "::base.html.twig" %}

{% block title %}PillsBundle:Post:index{% endblock %}

{% block body %}
<h1>Welcome to the Post:index page</h1>

<!-- Blog Entries Column -->
<div class="col-md-8">

    <h1 class="page-header">
        Page Heading
        <small>Secondary Text</small>
    </h1>

    <!-- First Blog Post -->
    <ul class="pager">
        {#<li class="previous">#}
